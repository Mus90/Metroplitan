@page "/"
@inherits HomeBase

@if (item == null)
{
    <span>Loading ...</span>
}
else
{
    <div >
        <div class="col-lg-12 mb-2">
            @if (showDetails)
            {
                <div class="card">
                    <div class="card-body">
                        <ul class="list-group list-group-flush row">
                            <li class="list-group-item">On: @item.title</li>
                            <li class="list-group-item">On: @item.creditLine</li>
                            <li class="list-group-item">On: @item.objectDate</li>
                            <li class="list-group-item">By: @item.artistDisplayName</li>
                            <li class="list-group-item">Nationality: @item.artistNationality</li>
                        </ul>
                    </div>
                    

                </div>
            }

        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block" style="height:1920px; width:1200px" @onclick=OnImageClicked src="@item.primaryImage" alt="First slide">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

